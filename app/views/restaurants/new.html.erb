<div class= container>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORY %>
    <%= f.submit class: 'btn btn-primary'%>
  <% end %>
  <%= button_to 'Back to list of restaurants', restaurants_path, class:'btn-primary rounded mt-3', method: :get %>
</div>
